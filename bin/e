#!/bin/bash

. ~/.settings

wmctrl -s 2

# for gnu emacs

if emacsclient -e '(version)' 2>/dev/null
then
    FILE=`abspath.py $1`
    emacsclient -e "(find-file \"$FILE\")"
else
    emacs -geometry $EMACS_GEOMETRY2 "$@" &
fi



