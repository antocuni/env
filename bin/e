#!/bin/bash

. ~/.settings

wmctrl -s 2

# for gnu emacs

if emacsclient -e '(version)' >/dev/null
then
    for FILE in $@
    do
        FILE=`abspath.py $FILE`
        emacsclient -e "(find-file \"$FILE\")" >/dev/null
    done
else
    emacs -geometry $EMACS_GEOMETRY2 "$@" &
fi



