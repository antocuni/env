#!/usr/bin/env python

import sys
import os.path
from urlparse import urlsplit
import webbrowser

def main():
    if len(sys.argv) < 2:
        print >> sys.stderr, 'Usage: f {FILE|URL}'
        return 1

    arg = sys.argv[1]
    info = urlsplit(arg)
    scheme = info[0]
    if scheme == '':
        url = 'file://%s' % os.path.abspath(arg)
    else:
        url = arg
    webbrowser.open(url)

sys.exit(main())
