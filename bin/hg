#!/bin/bash

# remove the current dir from the PATH
OLDPATH=$PATH
PATH=$(echo $PATH | sed s,$(dirname $0):,,g)
HG=`which hg`
PATH=$OLDPATH

case $1 in
    diff)     
        if [ -z $EMACS ] && isatty
        then
            $HG "$@" | diffpipe.py | less 
        else
            $HG "$@"
        fi ;;
    *)        $HG "$@" ;;
esac
