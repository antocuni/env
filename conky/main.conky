${offset 290}${color lightgrey} ${top_mem name 5} ${top_mem cpu 5} ${top_mem mem 5}
${offset 290}${color lightgrey} ${top_mem name 6} ${top_mem cpu 6} ${top_mem mem 6}
${offset 290}${color lightgrey} ${top_mem name 7} ${top_mem cpu 7} ${top_mem mem 7}
${offset 290}${color lightgrey} ${top_mem name 8} ${top_mem cpu 8} ${top_mem mem 8}
${offset 290}${color lightgrey} ${top_mem name 9} ${top_mem cpu 9} ${top_mem mem 9}
${offset 290}${color lightgrey} ${top_mem name 10} ${top_mem cpu 10} ${top_mem mem 10}

